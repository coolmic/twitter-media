{% extends 'base.html.twig' %}

{% block body %}
  <div class="container">
    <h3><strong>{{ user.name }}</strong> Tweets</h3>

    {% include 'tweets/navigate.html.twig' %}
    <hr>

    <div class="row ">
      {% for tweet in list %}
        <div class="col-12 col-md-6 col-xl-4 d-flex mb-3">
          <div class="card text-dark bg-light p-2 d-flex justify-content-between">
            <p>{{ tweet.text }}</p>

            <div class="text-center">
              {% for media in tweet.medias %}
                <img src="{{ media.url }}" class="img-fluid mb-2 rounded border-dark border-3" />
              {% endfor %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    <hr>
    {% include 'tweets/navigate.html.twig' %}
  </div>
{% endblock %}
